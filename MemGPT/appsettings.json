{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MemGpt": {
    "Azure": {
      "OpenAI": {
        "Endpoint": "<open-ai-endpoint-url>",
        "ApiKey": "<open-ai-api-key>",
        "EmbeddingDeploymentName": "text-embedding-ada-002",
        "ChatDeploymentName": "gpt-4.1-mini"
      },
      "Search": {
        "Endpoint": "<open-ai-search-url>",
        "ApiKey": "<open-ai-search-api-key>",
        "CollectionName": "chat-messages"
      }
    },
    "MemorySettings": {
      "StmCapacity": 10,
      "LongTermMemory": {
        "Capacity": 10,
        "SimilarityThreshold": 0.7,
        "DeleteBatchSize": 500,
        "MaxDeleteRetries": 3,
        "DeleteRetryDelayBaseMs": 100,
        "PageSize":  250
      }
    }
  }
}
